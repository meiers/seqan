                    -DCMAKE_VERBOSE_MAKEFILE=ON \
                    -DSEQAN_BUILD_SYSTEM=SEQAN_RELEASE_APPS \
                    -DPYTHON_EXECUTABLE=${prefix}/bin/python2.7

